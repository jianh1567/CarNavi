<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_dialog_bg">

    <TextView
        android:padding="8dp"
        android:layout_gravity="center"
        android:id="@+id/dlg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

    <TextView
        android:padding="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/dlg_message"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/app_update_log"/>

    <ProgressBar
        android:id="@+id/dlg_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="8dp"
        style="?android:attr/progressBarStyleHorizontal"/>


    <LinearLayout
        android:id="@+id/dlg_btn_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFFFFF"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dlg_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="不再提醒"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="18dp"/>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="2dp"
                android:layout_height="35dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/dlg_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="立即更新"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="18dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>